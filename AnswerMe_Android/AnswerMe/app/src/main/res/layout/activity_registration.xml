<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context="com.techstersolutions.answerme.RegistrationActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/full_logo"
        android:id="@+id/reg_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/reg_logo"
        android:layout_alignEnd="@+id/reg_logo"
        android:hint="Username"
        android:padding="10dp"
        android:background="#fff"
        android:backgroundTint="#FFF"
        android:layout_below="@+id/reg_logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText"
        android:hint="Password"
        android:padding="10dp"
        android:background="#fff"
        android:backgroundTint="#FFF"
        android:layout_marginTop="35dp"
        android:layout_alignEnd="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Confirm Password"
        android:padding="10dp"
        android:background="#fff"
        android:backgroundTint="#FFF"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="#fff"
        android:backgroundTint="#FFF"
        android:layout_marginTop="35dp"
        android:hint="E-Mail (Recovery)"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/imageView2"
        android:src="@drawable/textfield_email"
        android:layout_alignTop="@+id/editText4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/editText4" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/imageView3"
        android:src="@drawable/textfield_key"
        android:layout_alignTop="@+id/editText3"
        android:layout_alignBottom="@+id/editText3"
        android:layout_toEndOf="@+id/editText4"
        android:layout_toRightOf="@+id/editText4" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/imageView4"
        android:src="@drawable/textfield_lock"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_above="@+id/editText3" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/imageView5"
        android:src="@drawable/textfield_person"
        android:layout_alignTop="@+id/editText"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_above="@+id/editText2" />


</RelativeLayout>
